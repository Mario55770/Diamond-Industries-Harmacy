<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>DIH_BrickKnockoutPoison</defName>
    <label>brick knockout</label>
    <description>"Out like a light" never rings truer than when hit with bricks. This poison tends to safely knock individuals out.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <!--<lethalSeverity>1</lethalSeverity>-->
    <makesSickThought>true</makesSickThought>
    <scenarioCanAdd>true</scenarioCanAdd>
    <taleOnVisible>ToxicityRevealed</taleOnVisible>
    <comps>
      <li Class="HediffCompProperties_Immunizable">
        <severityPerDayNotImmune>-0.1</severityPerDayNotImmune>
      </li>
    </comps>
    <stages>
      <li>
        <label>lightly sedated</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>initial</label>
        <minSeverity>0.04</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.2</minSeverity>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>

      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <painOffset>0.3</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.6</offset>
          </li>
          </capMods>
      </li>
      <li>
        <label>sedated</label>
        <minSeverity>0.80</minSeverity>
        <vomitMtbDays>0.5</vomitMtbDays>
        <painOffset>0.4</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
         </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>