<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--the parent def of the poison vials. Just so I can have less redundant stats and junk-->
	<ThingDef ParentName="ResourceBase" Name="PoisonBase" Abstract="True">
		<!--<thingClass>Poison</thingClass>-->
		<graphicData>
			
			<texPath>Things/Item/Resource/Neutroamine</texPath>
			<!--<texPath>Things/Item/Resource/GenericPoison</texPath>-->
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
			
		<stackLimit>25</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<uiIconForStackCount>1</uiIconForStackCount>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<!--not all inclusive but covers some of the big ones. Change these to be the stats you want.-->
			<MaxHitPoints>50</MaxHitPoints>
			
			<Mass>0.02</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<!--what catagory it is displayed as in game-->
			<li>DIH_PoisonTab</li>
		</thingCategories>
	</ThingDef>
  <ThingDef ParentName="PoisonBase">
    <!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
    <defName>DIH_GenericPoison</defName>
    <!--This is the name displayed in game-->
    <label>generic poison vial</label>
    <!--the descritpion of the item-->
    <description>Generic poison vial. Shouldn't show up besides in dev mode with any luck.</description>
    <!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
	  <graphicData>
      <color>(180,173,150)</color>
    </graphicData>
	  <statBases>
		  <!--not all inclusive but covers  some of the big ones. Change these to be the stats you want.-->
		  <MarketValue>30</MarketValue>
	  </statBases>
  </ThingDef>
	<ThingDef ParentName="PoisonBase">
		<!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
		<defName>DIH_SnakeVenomVial</defName>
		<!--This is the name displayed in game-->
		<label>vial of snake venom</label>
		<!--the descritpion of the item-->
		<description>Full of venom either directly from a snake or designed to emulate it. Either way, it'll work the same, by making someones life worse.</description>
		<!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
		<graphicData>
			<color>(255,255,255)</color>
		</graphicData>
		<statBases>
			<!--not all inclusive but covers  some of the big ones. Change these to be the stats you want.-->
			<MarketValue>30</MarketValue>
		</statBases>
	</ThingDef>
</Defs>