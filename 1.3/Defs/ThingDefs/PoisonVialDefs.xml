<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--the parent def of the poison vials. Just so I can have less redundant stats and junk-->
	<ThingDef ParentName="ResourceBase" Name="PoisonBase" Abstract="True">
		<!--<thingClass>Poison</thingClass>-->
		<stackLimit>25</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<uiIconForStackCount>1</uiIconForStackCount>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<!--not all inclusive but covers some of the big ones. Change these to be the stats you want.-->
			<MaxHitPoints>50</MaxHitPoints>

			<Mass>0.02</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<!--what catagory it is displayed as in game-->
			<li>DIH_PoisonTab</li>
		</thingCategories>
	</ThingDef>
	<ThingDef ParentName="PoisonBase">
		<!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
		<defName>DIH_SnakeVenomVial</defName>
		<!--This is the name displayed in game-->
		<label>vial of snake venom</label>
		<!--the descritpion of the item-->
		<description>Full of venom either directly from a snake or designed to emulate it. Either way, it'll work the same, by making someones life worse.</description>
		<!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
		<statBases>
			<!--not all inclusive but covers  some of the big ones. Change these to be the stats you want.-->
			<MarketValue>30</MarketValue>
		</statBases>
		<tradeTags>
			<li>DIH_Poison</li>
		</tradeTags>
		<graphicData>
			<!--<texPath>Things/Item/Resource/Neutroamine</texPath>-->
			<texPath>DIHarmacy/Things/Item/Resource/GenericPoison</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="DI_Harmacy.PoisonProps">
				<poisonInflicts>DIH_SnakeVenom</poisonInflicts>
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<maxCharges>5</maxCharges>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="PoisonBase">
		<!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
		<defName>DIH_BrickKnockoutPoisonVial</defName>
		<!--This is the name displayed in game-->
		<label>vial of brick knockout</label>
		<!--the descritpion of the item-->
		<description>A vial of an anesthetic as potent as being hit in the face with a brick</description>
		<!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
		<graphicData>
			<texPath>DIHarmacy/Things/Item/Resource/BrickKnockout</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<!--not all inclusive but covers  some of the big ones. Change these to be the stats you want.-->
			<MarketValue>30</MarketValue>
		</statBases>
		<modExtensions>
			<li Class="DI_Harmacy.PoisonProps">
				<poisonInflicts>DIH_BrickKnockoutPoison</poisonInflicts>
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<maxCharges>5</maxCharges>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="PoisonBase">
		<!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
		<defName>DIH_MidnightMurderVial</defName>
		<!--This is the name displayed in game-->
		<label>vial of midnight murder</label>
		<!--the descritpion of the item-->
		<description>A vial of a poison designed for combat usage.</description>
		<!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
		<graphicData>
			<texPath>DIHarmacy/Things/Item/Resource/MidnightMurder</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>
		<statBases>
			<!--not all inclusive but covers  some of the big ones. Change these to be the stats you want.-->
			<MarketValue>30</MarketValue>

		</statBases>
		<modExtensions>
			<li Class="DI_Harmacy.PoisonProps">
				<poisonInflicts>DIH_MidnightMurder</poisonInflicts>
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<maxCharges>5</maxCharges>
			</li>
		</modExtensions>
	</ThingDef>
	<ThingDef ParentName="ResourceBase">
		<!--The name of the item. Should be consistent and unique once set so the game doesnt mess up-->
		<defName>DIH_ApplyNoPoison</defName>
		<!-- ParentName="NonExistentBase">-->
		<stackLimit>25</stackLimit>
		<healthAffectsPrice>false</healthAffectsPrice>
		<uiIconForStackCount>1</uiIconForStackCount>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<!--not all inclusive but covers some of the big ones. Change these to be the stats you want.-->
			<MaxHitPoints>50</MaxHitPoints>

			<Mass>0.02</Mass>
			<Flammability>0.7</Flammability>
			<DeteriorationRate>1.0</DeteriorationRate>
		</statBases>
		<!--<thingCategories>
			what catagory it is displayed as in game
			<li>DIH_PoisonTab</li>
		</thingCategories>-->


		<!--This is the name displayed in game-->
		<label>Use No Poison</label>
		<!--the descritpion of the item-->
		<description>If your seeing this, you either spawned this in dev mode, or I need to know. If your in dev mode, stop, if you're not...let me know how it happened.</description>
		<!--currently uses the texture of neutroamine. Instructions covered under textures. Change the textpath to your texture-->
	
		<graphicData>
			<texPath>DIHarmacy/Things/Item/Resource/RedSlash</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.90</drawSize>
		</graphicData>

		<modExtensions>
			<li Class="DI_Harmacy.PoisonProps">
				<ammoCountPerCharge>1</ammoCountPerCharge>
				<maxCharges>5</maxCharges>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>