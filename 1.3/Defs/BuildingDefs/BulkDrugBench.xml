<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- modified drug lab to do more bulk stuff. Original values are in reference to the original drug lab.-->
  <ThingDef ParentName="BenchBase">
    <defName>DIH_BulkDrugLab</defName>
    <label>bulk drug lab</label>
    <description>A larger scale workbench that allows producing bulk orders with labor savings.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/TableDrugLab</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <!--Originally (3.5,1.5) not that it should matter when I get custom art. (7,4) is from high tech research bench-->
      <drawSize>(6,4)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <!--originally 50-->
    <costStuffCount>100</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costList>
      <!--originally 75 steel, 6 industrial components-->
      <Steel>75</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <!-- default drug lab takes 3500 work, and has max hp of 120-->
      <WorkToBuild>5000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkTableWorkSpeedFactor>1.2</WorkTableWorkSpeedFactor>
    </statBases>
    <!--default drug lab has size of (3,1). Set to (5,2) to match high tech research bench-->
    <size>(5,2)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
     
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>120</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>DIH_BulkDrugProduction</li>
    </researchPrerequisites>
    <recipes>
      
    </recipes>
  </ThingDef>
  <!--Modified workgiver for the bulk operations.-->
  <WorkGiverDef>
    <defName>DIH_DoBillsProduceBulkDrugs</defName>
    <label>synthesize drugs in bulk</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Crafting</workType>
    <workTags>
      <li>Intellectual</li>
    </workTags>
    <priorityInType>95</priorityInType>
    <fixedBillGiverDefs>
      <li>DIH_BulkDrugLab</li>
    </fixedBillGiverDefs>
    <verb>produce drugs in bulk</verb>
    <gerund>producing drugs at</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>
</Defs>