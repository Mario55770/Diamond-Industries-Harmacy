<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<HediffDef>
  <defName>DIH_MidnightMurder</defName>
  <label>Midnight Murder</label>
  <description>Poison in the bloodstream. This poison is named for an old superstition that lead to it mostly being made at midnight.
    \nThis poison is typically used for weapons, with a high effeciency of incapaciting victims, sometimes causing death.</description>
  <hediffClass>HediffWithComps</hediffClass>
  <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
  <lethalSeverity>1.5</lethalSeverity>
  <makesSickThought>true</makesSickThought>
  <scenarioCanAdd>true</scenarioCanAdd>
  <taleOnVisible>ToxicityRevealed</taleOnVisible>
  <comps>
    <li Class="HediffCompProperties_Immunizable">
      <severityPerDayNotImmune>-0.1</severityPerDayNotImmune>
    </li>
  </comps>
  <stages>
    <li>
      <label>initial</label>
      <becomeVisible>false</becomeVisible>
    </li>
    <li>
      <label>initial</label>
      <minSeverity>0.04</minSeverity>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <offset>-0.05</offset>
        </li>
      </capMods>
    </li>
    <li>
      <label>minor</label>
      <minSeverity>0.3</minSeverity>
      <painOffset>0.1</painOffset>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <offset>-0.05</offset>
        </li>
        <li>
          <capacity>Breathing</capacity>
          <offset>-0.2</offset>
        </li>
        <li>
          <capacity>BloodPumping</capacity>
          <offset>-0.2</offset>
        </li>
        <li>
          <capacity>Moving</capacity>
          <offset>-0.2</offset>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <offset>-0.2</offset>
        </li>
      </capMods>
    </li>
    <li>
      <label>moderate</label>
      <minSeverity>0.50</minSeverity>
      <vomitMtbDays>5</vomitMtbDays>
      <painOffset>0.1</painOffset>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <offset>-0.05</offset>
        </li>
        <li>
          <capacity>Breathing</capacity>
          <offset>-0.25</offset>
        </li>
        <li>
          <capacity>BloodPumping</capacity>
          <offset>-0.25</offset>
        </li>
        <li>
          <capacity>Moving</capacity>
          <offset>-0.3</offset>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <offset>-0.3</offset>
        </li>
      </capMods>
      
    </li>
    <li>
      <label>serious</label>
      <minSeverity>0.80</minSeverity>
      <vomitMtbDays>1</vomitMtbDays>
      <painOffset>0.3</painOffset>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <offset>-0.05</offset>
        </li>
        <li>
          <capacity>Breathing</capacity>
          <offset>-0.3</offset>
        </li>
        <li>
          <capacity>BloodPumping</capacity>
          <offset>-0.3</offset>
        </li>
        <li>
          <capacity>Moving</capacity>
          <offset>-0.5</offset>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <offset>-0.5</offset>
        </li>
      </capMods>
    </li>
    <li>
      <label>extreme</label>
      <minSeverity>1.10</minSeverity>
      <vomitMtbDays>0.5</vomitMtbDays>
      <painOffset>0.4</painOffset>
      <capMods>
        <li>
          <capacity>Consciousness</capacity>
          <offset>-0.05</offset>
        </li>
        <li>
          <capacity>Breathing</capacity>
          <offset>-0.4</offset>
        </li>
        <li>
          <capacity>BloodPumping</capacity>
          <offset>-0.4</offset>
        </li>
        <li>
          <capacity>Moving</capacity>
          <offset>-0.6</offset>
        </li>
        <li>
          <capacity>Manipulation</capacity>
          <offset>-0.6</offset>
        </li>
      </capMods>
    </li>
  </stages>
</HediffDef>
</Defs>